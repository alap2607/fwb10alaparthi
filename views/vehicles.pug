extends layout

block content
  h1= title
  p Welcome to the vehicles pug
  div(class="container-fluid")
        div(class="row")
            -
                let bakery = [
                    {
                        "name": "Hyundai Sonata",
                        "colour": "blue",
                        "price": "Thirty-four Thousand USD"
                    },
                    {
                        "name": "Ford F-150",
                        "colour": "red",
                        "price": "Twenty-nine Thousand USD"
                    
                    },
                    {
                        "name": "Toyota Camry",
                        "colour": "white",
                        "price": "Twenty-five Thousand USD"
                    
                    },                   
                ]
            each v,index in bakery
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.name}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.colour}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }