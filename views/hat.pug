extends layout

block content
  h1= title
  p Welcome to the hat pug
  div(class="container-fluid")
        div(class="row")
            -
                let hat = [
                    {
                        "hat_name": "Beret Hat",
                        "colour": "white",
                        "price": "Thirty-four USD"
                    },
                    {
                        "hat_name": "Flat Hat",
                        "colour": "green",
                        "price": "Twenty USD"
                    
                    },
                    {
                        "hat_name": "Panama Hat",
                        "colour": "blue",
                        "price": "Fourty-five USD"
                    
                    },

                   
                ]
            each v,index in hat
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.hat_name}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.colour}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }